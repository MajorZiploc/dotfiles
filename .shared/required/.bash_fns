num_of_dirs() {
  ls -Al | egrep "^d" | wc -l
}

num_of_files() {
  ls -Al | egrep "^-" | wc -l
}

num_of_items() {
  ls -A | wc -l
}

parse_git_branch() {
     git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

export PS1="\u@\h \[\033[32m\]\w\[\033[33m\] [f$(num_of_files)/d$(num_of_dirs)/a$(num_of_items)] $(parse_git_branch)\[\033[00m\] $ "

